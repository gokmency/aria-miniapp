{
  "name": "aria-agent",
  "version": "1.0.0",
  "description": "Aria - XMTP Agent for Base App",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "gen:keys": "node ../../scripts/gen-keys.cjs",
    "build": "tsc -p tsconfig.json",
    "dev": "cross-env NODE_ENV=development tsx src/index.ts",
    "start": "node dist/index.js",
    "lint": "eslint .",
    "format": "prettier -w .",
    "check": "tsc --noEmit"
  },
  "dependencies": {
    "@xmtp/agent-sdk": "^1.1.4",
    "@google/generative-ai": "^0.21.0",
    "dotenv": "^16.4.5",
    "pino": "^9.0.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "eslint": "^8.57.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "prettier": "^3.2.5",
    "cross-env": "^7.0.3",
    "@types/node": "^20.11.0",
    "pino-pretty": "^10.3.1"
  },
  "keywords": ["xmtp", "agent", "base", "messaging"],
  "author": "Aria Team",
  "license": "MIT"
}
