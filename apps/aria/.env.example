# Environment Variables
# Copy this file to .env and fill in your values

# XMTP Agent Configuration
XMTP_WALLET_KEY=0x...  # Your wallet private key (NEVER commit this!)
XMTP_DB_ENCRYPTION_KEY=  # Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
XMTP_ENV=dev  # dev or production

# Application Configuration
NODE_ENV=development  # development or production
LOG_LEVEL=info  # debug, info, warn, error

# Gemini AI Configuration
GEMINI_API_KEY=  # Your Google Gemini API key from https://makersuite.google.com/app/apikey

# Optional: Base App Configuration
BASE_CHAIN_ID=8453  # Base mainnet chain ID
BASE_RPC_URL=https://mainnet.base.org  # Base RPC URL
